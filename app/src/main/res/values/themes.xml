<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Motyw startowy. Będzie używany przez bibliotekę SplashScreen. -->
<style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <!-- Tło ekranu powitalnego -->
    <item name="windowSplashScreenBackground">@color/splash_background</item>

    <!-- Ikona na ekranie powitalnym -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>

    <!-- Motyw, na który aplikacja przełączy się po zakończeniu splash screena -->
    <item name="postSplashScreenTheme">@style/Theme.SmartHRFanControl</item>
</style>

<!-- Główny motyw aplikacji (po splash screenie) -->
<style name="Theme.SmartHRFanControl" parent="android:Theme.Material.Light.NoActionBar">
    <!-- Tutaj możesz umieścić inne atrybuty, jeśli są potrzebne -->
    <item name="android:windowBackground">@color/black</item>
    <item name="android:statusBarColor">@color/black</item>
    <item name="colorPrimary">@color/black</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>